.content{
	width: 100%;
	height: 100%;
	background-color: #FFFFFF;
	background-repeat: no-repeat;
	background-position: center;
	background-size: cover;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.header{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding: 20rpx 20rpx 0rpx 20rpx;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.header .calendar,
.header .calendar image,
.header .spendDetail,
.header .spendDetail image{
	width: 60rpx;
	height: 60rpx;
}
.header .totalSpend{
	text-align: center;
	color: #fff;
	line-height: 60rpx;
	font-size: 32rpx;
	font-weight: 400;
}
.header .totalSpend .number{
	font-size: 40rpx;
}
.spendList{
	background-color: #fff;
	border-radius: 30rpx;
	margin-left: 5%;
	margin-right: 5%;
	margin-bottom: 15%;
	padding-bottom: 10rpx;
	position: relative;
}
.spendList .spendIncome{
	text-align: center;
	font-size: 32rpx;
	color: #333333;
	font-weight: 400;
	line-height: 58rpx;
}
.spendList .spendIncome .io{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.spendList .spendIncome .out,
.spendList .spendIncome .in{
	width: 50%;
	box-sizing: border-box;
}
.spendList .spendIncome .out{
	border-right: 4rpx dashed #999999;
}
.spendList .spendIncome .out .red{
	color: #DD524D;
}
.spendList .spendIncome .in .green{
	color: #4cd964;
}
.spendList .list{
	padding: 0rpx 20rpx;
}
.spendList .list .listItem{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.spendList .list .listItem .wrapper{
	line-height: 60rpx;
	font-size: 32rpx;
	font-weight: 400;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	width: 85%;
	border-bottom: 2rpx dashed #999999;
}
.spendList .list .listItem .typeIcon image{
	width: 60rpx;
	height: 60rpx;
	/* background-color: #007AFF; */
	border-radius: 50%;
}
.spendList .list .listItem .typeIcon{
	border-radius: 50%;
	width: 15%;
}
.spendList .addButton{
	position: fixed;
	left: 44%;
	bottom: 5%;
}
.spendList .addButton,
.spendList .addButton image{
	width: 80rpx;
	height: 80rpx;
	background-color: #F0AD4E;
	border-radius: 50%;
	box-shadow: 0rpx 0rpx 25rpx #F0AD4E;
}

