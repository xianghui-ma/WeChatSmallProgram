page{
	background-color: #fff;
}
.content{
	width: 100%;
	height: 100%;
	background-color: #fff;
}
.inputName{
	padding-top: 30rpx;
}
.inputName input{
	margin-left: 5%;
	margin-right: 5%;
	height: 80rpx;
	padding: 0rpx 10rpx;
	border: 4rpx solid #999999;
	border-radius: 20rpx;
}
.tip{
	font-size: 32rpx;
	font-weight: 400;
	padding-left: 5%;
	line-height: 96rpx;
}
.imgArea{
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
	-webkit-align-content: space-between;
	        align-content: space-between;
}
.imgArea .img{
	background-repeat: no-repeat;
	background-position: 0% 0%;
	background-size: cover;
	width: 30%;
	height: 280rpx;
	border-radius: 20rpx;
	margin-bottom: 30rpx;
	position: relative;
}
.imgArea .img image{
	width: 40rpx;
	height: 40rpx;
	position: absolute;
	right: 8rpx;
	bottom: 8rpx;
}
.imgArea .addImg{
	border: 4rpx dashed #999999;
	font-size: 34rpx;
	font-weight: 400;
	line-height: 280rpx;
	text-align: center;
}
.button{
	padding-top: 30rpx;
}
.button button{
	margin-left: 10%;
	margin-right: 10%;
	margin-bottom: 40rpx;
}

